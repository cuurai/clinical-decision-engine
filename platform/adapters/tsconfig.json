{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "verbatimModuleSyntax": false,
    "baseUrl": "../../",
    "paths": {
      "@cuur/core": ["packages/core/src/index.ts"],
      "@cuur/core/*": ["packages/core/src/*"]
    }
  },
  "references": [
    { "path": "../../packages/core" }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
