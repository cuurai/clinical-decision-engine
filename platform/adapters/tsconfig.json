{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "noEmit": false,
    "declaration": true,
    "declarationMap": true,

    "verbatimModuleSyntax": false,
    "composite": false
  },

  "include": ["src/**/*.ts"],

  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
