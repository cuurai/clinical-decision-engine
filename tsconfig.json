{
  "compilerOptions": {
    /* Build output */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Project references */
    "composite": true,

    /* ESM correctness (CRITICAL) */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",

    /* Types */
    "declaration": true,
    "declarationMap": true,

    /* Safety */
    "isolatedModules": true,
    "verbatimModuleSyntax": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
