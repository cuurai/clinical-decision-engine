{
  "name": "@cuurai/clinical-decision-engine",
  "version": "1.0.0",
  "description": "Clinical Decision Engine - Monorepo Root",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/core",
    "packages/core/*",
    "packages/database",
    "platform/adapters/_shared",
    "platform/adapters/decision-intelligence",
    "platform/adapters/integration-interoperability",
    "platform/adapters/knowledge-evidence",
    "platform/adapters/patient-clinical-data",
    "platform/adapters/workflow-care-pathways",
    "platform/services/src/*"
  ],
  "scripts": {
    "build": "cd packages/core && npm install && npm run build",
    "build:watch": "cd packages/core && npm run build:watch",
    "clean": "cd packages/core && npm run clean",
    "typecheck": "cd packages/core && npm run typecheck",
    "lint": "cd packages/core && npm run lint",
    "format": "cd packages/core && npm run format",
    "generate:prisma": "bash scripts/generate-prisma-clients.sh"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@prisma/client": "^6.0.1",
    "js-yaml": "^4.1.1",
    "prisma": "^6.0.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "glob": "^13.0.0"
  }
}
