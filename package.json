{
  "name": "@cuurai/clinical-decision-engine",
  "version": "1.0.0",
  "description": "Clinical Decision Engine - Monorepo Root",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/core",
    "packages/database",
    "platform/adapters/*",
    "platform/services/*"
  ],
  "scripts": {
    "build": "tsc -b",
    "build:services": "tsc -b platform/services",
    "build:adapters": "tsc -b platform/adapters",
    "clean": "tsc -b --clean",
    "typecheck": "tsc -b --noEmit",
    "generate:prisma": "cd packages/database && prisma generate"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "@types/node": "^20.11.0",
    "dotenv-cli": "^11.0.0"
  }
}